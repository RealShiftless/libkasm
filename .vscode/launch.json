{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug kasm",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/build/bin/kasm.exe",       // or ./build/kasm or whatever path
      "args": ["-f", "examples/debug.kasm", "-t", "km8"],
      "cwd": "${workspaceFolder}",
      "stopAtEntry": false,
      "externalConsole": true,                 // or externalTerminal
      "MIMode": "gdb",                                 // or "lldb" or "gdb" depending on OS
      "setupCommands": [
        {
          "description": "Enable pretty-printing",
          "text": "-enable-pretty-printing",
          "ignoreFailures": true
        }
      ]
    }
  ]
}
